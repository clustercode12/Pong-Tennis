<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="false"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/llayWorld1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view3">

        <ImageView
            android:id="@+id/ivWorld1"
            android:src="@drawable/world_1_image"
            app:srcCompat="@drawable/world_1_image"
            android:contentDescription="@drawable/world_1_image"
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world1"
                android:id="@+id/txtWorld1"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="70sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world1type"
                android:id="@+id/txtWorld1Type"
                android:layout_gravity="center"
                android:textSize="54sp"
                android:textAlignment="center" />
        </GridLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:background="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:id="@+id/view3"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="4dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/llayWorld2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view3">

        <ImageView
            android:id="@+id/ivWorld2"
            android:src="@drawable/world_2_image"
            app:srcCompat="@drawable/world_2_image"
            android:contentDescription="@drawable/world_2_image"
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world2"
                android:id="@+id/txtWorld2"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="70sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world2type"
                android:id="@+id/txtWorld2Type"
                android:layout_gravity="center"
                android:textSize="54sp"
                android:textAlignment="center"
                android:textAllCaps="false" />

        </GridLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:background="#000000"
        android:id="@+id/view2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="4dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/llayWorld3"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintBottom_toTopOf="@+id/view6">

        <ImageView
            android:id="@+id/ivWorld3"
            android:src="@drawable/world_3_image"
            app:srcCompat="@drawable/world_3_image"
            android:contentDescription="@drawable/world_3_image"
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world3"
                android:id="@+id/txtWorld3"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="70sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world3type"
                android:id="@+id/txtWorld3Type"
                android:layout_gravity="center"
                android:textSize="54sp"
                android:textAlignment="center" />

        </GridLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:background="#000000"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view6"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="4dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/llayWorld4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view6">

        <ImageView
            android:id="@+id/ivWorld4"
            android:src="@drawable/world_lock_image"
            app:srcCompat="@drawable/world_lock_image"
            android:contentDescription="@drawable/world_lock_image"
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world4"
                android:id="@+id/txtWorld4"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="70sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world4type"
                android:id="@+id/txtWorld4Type"
                android:layout_gravity="center"
                android:textSize="54sp"
                android:textAlignment="center" />

        </GridLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
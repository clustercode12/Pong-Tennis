<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/constraintLayout3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLevelInfoLevelPopUp"
        android:text="LEVEL"
        android:textColor="#ffffff"
        android:textSize="140sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTypeLevelPopUp"
        android:text="CLASSIC GAME"
        android:textColor="#ffffff"
        android:textSize="54sp"
        app:layout_constraintTop_toBottomOf="@+id/txtLevelInfoLevelPopUp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/ivInfoLevelPopUp"
        android:src="@drawable/bomb_white"
        app:srcCompat="@drawable/bomb_white"
        android:contentDescription="@drawable/bomb_white"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTypeLevelPopUp"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintBottom_toTopOf="@+id/txtGoalInfoPopUp"
        android:layout_marginBottom="8dp"
        android:layout_width="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGoalInfoPopUp"
        android:textAlignment="center"
        android:text="POINTS"
        android:textColor="#ffffff"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
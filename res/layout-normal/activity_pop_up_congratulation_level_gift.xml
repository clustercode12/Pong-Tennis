<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtPopUpCongratulationLevelGiftCongratulation"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/txtCongratulationPopUp"
        android:textAlignment="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtCongratulationPopUpLevelPresentTitle1"
        android:id="@+id/txtPopUpCongratulationLevelGiftTitle1"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivPopUpCongratulationLevelGiftGift"
        android:layout_marginBottom="24dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btPopUpCongratulationLevelGiftEquip"
        android:textSize="30sp"
        android:text="@string/txtCongratulatonPopUpLevelPresentRadioButton"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        android:layout_height="60dp"
        android:layout_width="225dp" />

    <ImageView
        android:id="@+id/ivPopUpCongratulationLevelGiftGift"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPopUpCongratulationLevelGiftCongratulation"
        app:layout_constraintBottom_toTopOf="@+id/btPopUpCongratulationLevelGiftEquip"
        android:layout_marginBottom="8dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtCongratulationPopUpLevelPresentTitle2"
        android:id="@+id/txtPopUpCongratulationLevelGiftTitle2"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/ivPopUpCongratulationLevelGiftGift"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />
</android.support.constraint.ConstraintLayout>
